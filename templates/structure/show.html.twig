            </tr>
            <tr>
                <th>Userupdate</th>
                <td>{{ structure.userupdate }}</td>
            </tr>
            <tr>
                <th>Dateupdate</th>
                <td>{{ structure.dateupdate ? structure.dateupdate|date('Y-m-d H:i:s') : '' }}</td>
