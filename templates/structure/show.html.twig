    <h1>Structure</h1>

    <table id="example" class="display" style="width:100%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ structure.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ structure.nom }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ structure.addresse }}</td>
            </tr>
            <tr>
