{% extends 'base.html.twig' %}

{% block title %}Vente index{% endblock %}

{% block body %}
    <h1>Vente index</h1>

    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Somme</th>
                <th>String</th>
                <th>Vendeur</th>
                <th>Datetime</th>
                <th>Produit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vente in ventes %}
            <tr>
                <td>{{ vente.id }}</td>
                <td>{{ vente.somme }}</td>
                <td>{{ vente.string }}</td>
                <td>{{ vente.vendeur }}</td>
                <td>{{ vente.datetime ? vente.datetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ vente.produit }}</td>
                <td>
                    <a href="{{ path('app_vente_show', {'id': vente.id}) }}">show</a>
                    <a href="{{ path('app_vente_edit', {'id': vente.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vente_new') }}">Create new</a>
{% endblock %}
