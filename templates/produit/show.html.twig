{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit: {{ produit.nom }}</h1>

    <table id="example" class="display" style="width:100%">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ produit.sku }}</td>
            </tr>
            <tr>
                <th>Date expiration</th>
                <td>{{ produit.dateexpiration|date('Y-m-d H:i:s')}}</td>
            </tr>
            <tr>
                <th>Etat produit</th>
                <td>{{ produit.etatProduit}}</td>
            </tr>
        </tbody>
    </table>

