{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table id="example" class="display" style="width:100%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ produit.sku }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ produit.etat }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ produit.statut ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Usercreate</th>
                <td>{{ produit.usercreate }}</td>
            </tr>
            <tr>
                <th>Datecreate</th>
                <td>{{ produit.datecreate ? produit.datecreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Userdelete</th>
                <td>{{ produit.userdelete }}</td>
            </tr>
            <tr>
                <th>Datedelete</th>
                <td>{{ produit.datedelete ? produit.datedelete|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Userupdate</th>
                <td>{{ produit.userupdate }}</td>
            </tr>
            <tr>
                <th>Dateupdate</th>
                <td>{{ produit.dateupdate ? produit.dateupdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

